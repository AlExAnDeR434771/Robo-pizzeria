def main():
surname, name, patronymic, age = data_visitor()
    hello_visitor(surname, name, patronymic)
    menu(age)
    order(age)
    payment()

# 1 пользователь вводит свои данные ФИО и возраст

def data_visitor():
    surname = input("Введите вашу фамилию:")
    while surname == surname.lower() or surname.find(" ") != -1:
        print("Неправильное фамилия")
        surname = input("Введите вашу фамилию:")

    name = input("Введите ваше имя:")
    while name == name.lower() or name.find(" ") != -1:
        print("Неправильное имя")
        name = input("Введите ваше имя:")

    patronymic = input("Введите ваше отчество:")
    while patronymic == patronymic.lower() or patronymic.find(" ") != -1:
        print("Неправильное отчество")
        patronymic = input("Введите ваше отчество:")

    age = int(input("Введите ваш возраст:"))
    while age > 120 or age < 1:
        print("Неправильный возраст")
        age = int(input("Введите ваш возраст:"))

    return surname, name, patronymic, age

#2 пользователя приветствуют и показывают меню, если пользователь
# старше 18 лет то ему показывают взрослое меню с увеличенными порциями
def hello_visitor(surname: str, name: str, patronymic: str) -> print():
    return print(f"Здравствуйте, {surname} {name} {patronymic}! "
                 f"Добро пожаловать в пиццерию Эль-Аркадио!")


def menu(age):
    pepperoni = 370
    mushroom = 375
    custom = 470
    water = 70
    apple_juice = 200
    soda = 250

    if age < 18:
        return print("Вот ваше меню - \n",
                     "----------Пицца-----------\n"
                     f"Пицца пепперони  {pepperoni}р / 400г\n"
                     f"Пицца грибная  {mushroom}р / 400г\n"
                     f"КАСТОМНАЯ ПИЦЦА {custom}р / 400г\n",
                     "----------Напитки----------\n"
                     f"Вода  {water}р / 250мл\n"
                     f"Яблочный сок  {apple_juice}р / 250мл\n")

    else:
        return print("Вот ваше меню - \n",
                     "----------Пицца-----------\n"
                     f"Пицца пепперони  {pepperoni + 200}р / 650г\n"
                     f"Пицца грибная  {mushroom + 200}р / 650г\n"
                     f"КАСТОМНАЯ ПИЦЦА {custom + 200}р / 650г\n",
                     "----------Напитки----------\n"
                     f"Вода  {water + 30}р / 750мл\n"
                     f"Газировка  {soda} / 750мл\n")

#3 Пользователь выбирает готовые варианты пицц, и напитки,
# либо выбирает кастомную пиццу с вариантами начинок.
def order(age):
    order_visitor1 = input("Выберите 1-ый товар: ")
    order_visitor2 = input("Выберите 2-ой товар: ")
    order_visitor = order_visitor1 and order_visitor2

    while (order_visitor != "Пицца пепперони" and order_visitor != "Пицца грибная"
           and order_visitor != "КАСТОМНАЯ ПИЦЦА" and order_visitor != "Вода"
           and order_visitor != "Яблочный сок"
           and order_visitor != "Газировка"):
        order_visitor1 = input("Выберите 1-ый товар: ")
        order_visitor2 = input("Выберите 2-ой товар: ")

    if order_visitor1 and order_visitor2 == "Пицца пепперони" and "Пицца грибная":
        filling_pizza = input("Выберите начинку - \n"
                              "99 сыров \n"
                              "ананасы \n"
                              "оливки \n: ")

        while filling_pizza != "99 сыров" and filling_pizza != "ананасы" and filling_pizza != "оливки":
            print("Такой начинки нет")
            filling_pizza = input("Выберите начинку - \n "
                                  "99 сыров \n"
                                  "ананасы \n"
                                  "оливки \n: ")

        print(f"Вы выбрали Пиццу с начинкой {filling_pizza}")

    else:
        print(f"Вы выбрали {order_visitor1 and order_visitor2}")

# 4 Пользователю выдается чек с перечислением всех позиций и итоговой суммой
    pepperoni = 370
    mushroom = 375
    custom = 470
    water = 70
    apple_juice = 200
    soda = 250

    children_price_pizzas = [f"{pepperoni}, {mushroom}, {custom}"]

adult_price_pizza = [f"{pepperoni + 200}, {mushroom + 200}, {custom+ 200}"]
    adult_price_drinks = [f"{water + 30}, {soda}"]

    if age < 18:
        order_visitor = ["Пицца пепперони" == children_price_pizzas]
        order_visitor = ["Пицца грибная" == children_price_pizzas]
        order_visitor = ["КАСТОМНАЯ ПИЦЦА" == children_price_pizzas]
        order_visitor = ["Вода" == children_price_drinks]
        order_visitor = ["Яблочный сок" == children_price_drinks]

    else:
        order_visitor = ["Пицца пепперони" == adult_price_pizza]
        order_visitor = ["Пицца грибная" == adult_price_pizza]
        order_visitor = ["КАСТОМНАЯ ПИЦЦА" == adult_price_pizza]
        order_visitor = ["Вода" == adult_price_drinks]
        order_visitor = ["Газировка" == adult_price_drinks]

    cheque = lambda n: n + n

    print(f"Вы заказали {order_visitor1} и {order_visitor2} \n "
          f"Итоговая сумма {cheque(order_visitor)} ")

# 5 Пользователь выбирает оплату оплата картой (в этом случае сдача не выдаётся)
# или наличкой(рассчитать сдачу).
def payment():
    your_balance = int(input("Введите сколько у вас  денег (от 1350 до 5000): "))
    while your_balance > 5000 or your_balance < 1350:
        if your_balance > 5000:
            print("Слишком много для пиццерии")

        else:
            print("Маловато для пиццерии")
        your_balance = int(input("Введите сколько у вас  денег (от 1350 до 5000): "))

    choice_payment = input("Выберите способ оплаты - \n "
                           "Картой \n"
                           "Наличкой \n: ")
    while choice_payment != "Картой" and choice_payment != "Наличкой":
        choice_payment = input("Выберите способ оплаты - \n"
                               "Картой \n"
                               "Наличкой \n: ")

main()
